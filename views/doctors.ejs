<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e3f2fd, #fff);
            color: #333;
            overflow-x: hidden;
        }

        h1 {
            color: #1a73e8;
            text-align: center;
            margin-top: 20px;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 20px 0;
        }

        li {
            margin: 10px 0;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        a {
            text-decoration: none;
            color: #1a73e8;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }

        .nav-buttons {
            text-align: center;
            margin-top: 20px;
        }

        button {
            background-color: #1a73e8;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 1em;
            margin: 0 10px;
        }

        button:hover {
            background-color: #145ab6;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #1a73e8;
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar ul {
            display: flex;
            list-style-type: none;
            margin: 0;
            padding: 0;
            justify-content: center;
        }

        .navbar li {
            margin: 0 15px;
        }

        li.navb {
            justify-content: center;
            list-style-type: none;
            border: 0px;
            padding: 10px;
            background-color: #1a73e8;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 15px;
            transition: background-color 0.3s;
        }

        .navbar a:hover {
            background-color: #145ab6;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <ul>
            <li class="navb"><a href="/vaccines">Home</a></li>
            <li class="navb"><a href="/my-appointments">Appointments</a></li>
            <li class="navb"><a href="/notifications">Notifications</a></li>
            <li class="navb"><a href="/profile">Profile</a></li>
            <li class="navb"><a href="/insurance">Insurance</a></li>
            <li class="navb"><a href="/vaccine-info">Vaccine Awareness</a></li>
            <li class="navb"><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1>Available Doctors</h1>
        <ul>
            <% doctors.forEach(doctor=> { %>
                <li>
                    <a href="/hospitals/<%= hospitalId %>/doctors/<%= doctor.doctor_id %>">
                        <%= doctor.doctor_name %> - <%= doctor.specialization %>
                    </a>
                </li>
                <% }); %>
        </ul>


    </div>
</body>

</html>