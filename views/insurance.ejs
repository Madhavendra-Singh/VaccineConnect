<!-- views/insurance-details.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Insurance Details - VaccineConnect</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f1f8e9, #e0f7fa);
            color: #333;
            overflow-x: hidden;
        }

        nav {
            width: 100%;
            background-color: #1a73e8;
            padding: 15px 0;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        nav ul {
            display: flex;
            justify-content: center;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        nav ul li {
            margin: 0 20px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 1.1em;
            transition: color 0.3s ease;
        }

        nav ul li a:hover {
            color: #ffcc00;
        }

        h1,
        h3 {
            color: #1a73e8;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        form {
            margin-bottom: 40px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }

        button {
            background-color: #1a73e8;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 10px;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
            width: 100%;
        }

        button:hover {
            background-color: #145ab6;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        thead {
            background-color: #1a73e8;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        th {
            font-weight: bold;
            text-transform: uppercase;
            font-size: 1em;
        }

        td {
            font-size: 0.9em;
        }

        a {
            text-decoration: none;
            color: #1a73e8;
            font-weight: bold;
            margin-right: 10px;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 768px) {

            form,
            table {
                width: 100%;
            }

            th,
            td {
                padding: 10px;
                font-size: 0.8em;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav>
        <ul>
            <li><a href="/vaccines">Home</a></li>
            <li><a href="/my-appointments">Appointments</a></li>
            <li><a href="/notifications">Notifications</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/insurance">Insurance</a></li>
            <li><a href="/vaccine-info">Vaccine Awareness</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Your Insurance Details</h1>

        <!-- Add New Insurance Form -->
        <form action="/add-insurance" method="POST">
            <h3>Add New Insurance</h3>
            <label for="insurance_provider">Insurance Provider:</label>
            <input type="text" id="insurance_provider" name="insurance_provider" required>

            <label for="policy_number">Policy Number:</label>
            <input type="text" id="policy_number" name="policy_number" required>

            <label for="coverage_amount">Coverage Amount:</label>
            <input type="number" id="coverage_amount" name="coverage_amount" step="0.01" required>

            <label for="expiry_date">Expiry Date:</label>
            <input type="date" id="expiry_date" name="expiry_date" required>

            <button type="submit">Add Insurance</button>
        </form>

        <!-- Current Insurance Table -->
        <h3>Your Current Insurance</h3>
        <table>
            <thead>
                <tr>
                    <th>Provider</th>
                    <th>Policy Number</th>
                    <th>Coverage Amount</th>
                    <th>Expiry Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% insuranceDetails.forEach(insurance=> { %>
                    <tr>
                        <td>
                            <%= insurance.insurance_provider %>
                        </td>
                        <td>
                            <%= insurance.policy_number %>
                        </td>
                        <td>
                            <%= insurance.coverage_amount %>
                        </td>
                        <td>
                            <%= insurance.expiry_date %>
                        </td>
                        <td>
                            <a href="/insurance/edit/<%= insurance.insurance_id %>">Edit</a>
                            <a href="/insurance/delete/<%= insurance.insurance_id %>">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>