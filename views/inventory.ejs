<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaccine Inventory</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e3f2fd, #fff);
            color: #333;
            overflow-x: hidden;
            height: 100vh;
            overflow-y: auto;
        }

        nav {
            width: 100%;
            background-color: #1a73e8;
            padding: 15px 0;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        nav ul {
            display: flex;
            justify-content: center;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        nav ul li {
            margin: 0 20px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 1.1em;
            transition: color 0.3s ease;
        }

        nav ul li a:hover {
            color: #ffcc00;
        }

        h1 {
            color: #1a73e8;
            text-align: center;
            margin-top: 20px;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 20px 0;
        }

        li {
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
        }

        strong {
            display: block;
            margin-bottom: 5px;
            font-size: 1.2em;
            color: #1a73e8;
        }

        form {
            margin-top: 10px;
        }

        label {
            margin-right: 5px;
        }

        input[type="date"],
        input[type="time"] {
            margin: 5px 0 10px 5px;
            width: 150px;
            /* Slimmer width */
            transition: all 0.3s ease;
            /* Smooth transition */
        }

        input[type="date"]:focus,
        input[type="time"]:focus {
            border-color: #1a73e8;
            /* Change border color on focus */
            outline: none;
            /* Remove default outline */
        }

        button {
            background-color: #1a73e8;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 1em;
        }

        button:hover {
            background-color: #145ab6;
        }

        .nav-buttons {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav>
        <ul>
            <li><a href="/vaccines">Home</a></li>
            <li><a href="/my-appointments">Appointments</a></li>
            <li><a href="/notifications">Notifications</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/insurance">Insurance</a></li>
            <li><a href="/vaccine-info">Vaccine Awareness</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Vaccine Inventory</h1>
        <ul>
            <% vaccines.forEach(vaccine=> { %>
                <li>
                    <strong>
                        <%= vaccine.vaccine_name %>
                    </strong> - Available: <%= vaccine.stock_quantity %> - Price: â‚¹<%= vaccine.price %>
                            <form action="/book-appointment" method="POST">
                                <input type="hidden" name="vaccine_id" value="<%= vaccine.vaccine_id %>">
                                <input type="hidden" name="hospital_id" value="<%= hospitalId %>">
                                <input type="hidden" name="doctor_id" value="<%= doctorId %>">
                                <label for="appointment_date">Select Date:</label>
                                <input type="date" id="appointment_date" name="appointment_date" required>
                                <label for="appointment_time">Select Time:</label>
                                <input type="time" id="appointment_time" name="appointment_time" required>
                                <button type="submit">Book Appointment</button>
                            </form>
                </li>
                <% }); %>
        </ul>
    </div>
</body>

</html>